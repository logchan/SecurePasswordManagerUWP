<ContentDialog
    x:Class="SecurePasswordManager.Templates.FirstRunDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SecurePasswordManager.Templates"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="WELCOME"
    PrimaryButtonText="Got it!"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    >

    <Grid>
        <StackPanel>
            <TextBlock>Secure Password Manager</TextBlock>
            <TextBlock TextWrapping="Wrap">This is a tool helping you to use different passwords.</TextBlock>
            <TextBlock>You can find more help here:</TextBlock>
            <HyperlinkButton NavigateUri="https://logu.co/myapps/">https://logu.co/myapps/</HyperlinkButton>
            <TextBlock></TextBlock>
            <TextBlock TextWrapping="Wrap">More information can be found by tapping the top-left corner and choose "About".</TextBlock>
        </StackPanel>
    </Grid>
</ContentDialog>
